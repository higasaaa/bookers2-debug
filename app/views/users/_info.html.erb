<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr> <!--userが@book.userを呼び出している-->
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th> <!--userが@book.userを呼び出している-->
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th> <!--userが@book.userを呼び出している-->
  </tr>
  <tr>
    <th>follows</th>
    <th><%= link_to user.followings.count, user_followings_path(user) %></th> <!--引数-->
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to user.followers.count, user_followers_path(user) %></th>
  </tr>
</table>

<div class='row'>
  <% if current_user != user %>
    <td><%= render "relationships/btn", user: user %></td>
  <% else %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
     <i class="fas fa-user-cog"></i>
     <% end %>
  <% end %>
</div>