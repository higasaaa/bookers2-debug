

<!--入力内容を受け取る定型分、urlでsearchesコントローラに情報を送る-->
<%= form_with url: search_path, method: :get, local: :true do |f| %>
<!--f.select :range：選択されたものをrangeとしてアクションに送るようにする-->
  <%= f.select :range, options_for_select([['User'], ['Book']]) %>
  <!--options_for_selectこれでタブが作成されます。-->
  <%= f.select :search, options_for_select([["完全一致","perfect_macth"], ["前方一致","forward_match"], ["後方一致","backward_match"], ["部分一致","partial_match"]]) %>
  <!--入力されたものをwordとしてアクションに送る-->
  <%= f.text_field :word %>
  <%= f.submit "検索" %>
<% end %>
